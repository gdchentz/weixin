
/* pages/ble/index.wxss */
.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 15rpx;
  background-color: #f8f9fb;
}

.content-area {
  flex: 3;
  margin-bottom: 15rpx;
  background-color: white;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.device-panel {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  flex: 1;
}

.control-group {
  margin-bottom: 20rpx;
}

.btn {
  font-size: 14px;
  border-radius: 8rpx;
  padding: 14rpx 20rpx;
  text-align: center;
  transition: all 0.2s;
}

.btn-primary {
  background-color: #07c160;
  color: white;
  width: 100%;
}

.btn-command {
  background-color: #1989fa;
  color: white;
}

.btn-danger {
  background-color: #ee0a24;
  color: white;
}

.btn-loading {
  background-color: #ededed;
  color: #999;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.btn-text {
  background: none;
  color: #1989fa;
  font-size: 13px;
  padding: 0;
  margin: 0;
  border: none;
  border-radius: 0;
  display: inline;
}

.loading-circle {
  width: 22rpx;
  height: 22rpx;
  border: 3rpx solid rgba(0,0,0,0.1);
  border-top-color: #666;
  border-radius: 50%;
  margin-right: 10rpx;
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  to { transform: rotate(360deg); }
}

.device-section {
  padding-top: 10rpx;
  display: flex;
  flex-direction: column;
  flex: 1;
}

.section-title {
  font-size: 15px;
  font-weight: 600;
  margin-bottom: 15rpx;
  color: #333;
  display: block;
}

.device-scroll {
  flex: 1;
  display: flex;
  flex-direction: column;
  background: #f8f9fb;
  border-radius: 8rpx;
}

.device-container {
  flex: 1;
  padding: 10rpx;
  overflow-y: auto;
}

.device-card {
  padding: 15rpx;
  margin-bottom: 15rpx;
  background: #fff;
  border-radius: 8rpx;
  box-shadow: 0 1rpx 4rpx rgba(0,0,0,0.05);
  border-left: 4rpx solid #07c160;
}

.device-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.device-name {
  font-size: 15px;
  font-weight: 500;
  max-width: 65%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.device-id {
  font-size: 12px;
  color: #999;
  display: block;
}

.device-rssi {
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #666;
}

.signal-icon {
  width: 14px;
  height: 14px;
  position: relative;
  margin-right: 5rpx;
  background: linear-gradient(to top, #07c160 var(--signal-color), #eee 0);
  border-radius: 2px;
}

.connected-panel {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  flex: 1;
}

.device-header {
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.device-status {
  background: #07c160;
  color: white;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-size: 12px;
  margin-right: 10rpx;
}

.device-name {
  font-size: 15px;
  max-width: 70%;
}

.connection-details {
  display: flex;
  padding: 0 0 15rpx;
  margin-bottom: 15rpx;
}

.detail-card {
  flex: 1;
  padding: 12rpx;
  background: #f5f7fa;
  border-radius: 6rpx;
  margin: 0 8rpx;
}

.detail-label {
  font-size: 12px;
  color: #888;
}

.detail-value {
  font-size: 13px;
  margin-top: 6rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.action-group {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0 20rpx;
  gap: 15rpx;
}

.action-group .btn {
  flex: 1;
}

.signal-indicator {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.signal-bars {
  display: flex;
  align-items: flex-end;
  height: 30rpx;
  gap: 4rpx;
}

.signal-bar {
  width: 8rpx;
  background-color: #e0e0e0;
  border-radius: 4rpx;
  transition: all 0.3s;
}

.signal-bar:nth-child(1) { height: 8rpx; }
.signal-bar:nth-child(2) { height: 16rpx; }
.signal-bar:nth-child(3) { height: 24rpx; }
.signal-bar:nth-child(4) { height: 30rpx; }

.signal-bar.active {
  background-color: #07c160;
}

.signal-info {
  display: flex;
  flex-direction: column;
}

.signal-value-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.signal-value {
  font-size: 12px;
  color: #666;
}

.distance-indicator {
  font-size: 12px;
  font-weight: bold;
  padding: 2rpx 8rpx;
  border-radius: 10rpx;
}

.distance-indicator.close {
  background-color: rgba(7, 193, 96, 0.15);
  color: #07c160;
}

.distance-indicator.medium {
  background-color: rgba(25, 137, 250, 0.15);
  color: #1989fa;
}

.distance-indicator.far {
  background-color: rgba(255, 165, 0, 0.15);
  color: #ffa500;
}

.distance-indicator.very-far {
  background-color: rgba(238, 10, 36, 0.15);
  color: #ee0a24;
}

.distance-indicator.unknown {
  background-color: rgba(153, 153, 153, 0.15);
  color: #999;
}

.senddata-panel {
  margin: 15rpx 0;
  padding: 15rpx 0;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
}

.senddata-view {
  background: #f9f9f9;
  border-radius: 8rpx;
  margin-top: 10rpx;
  padding: 15rpx;
}

.senddata-content {
  width: 100%;
  min-height: 120rpx;
  font-size: 14px;
  background: transparent;
  border: none;
}

.data-panel {
  padding-top: 15rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.data-view {
  flex: 1;
  background: #f9f9f9;
  border-radius: 6rpx;
  padding: 15rpx;
  margin: 10rpx 0;
  overflow-y: auto;
}

.data-content {
  white-space: pre-wrap;
  font-family: monospace;
  font-size: 13px;
  line-height: 1.5;
}

.log-panel {
  flex: 1;
  background-color: white;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.log-header {
  padding: 15rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.panel-actions {
  display: flex;
}

.log-scroll {
  flex: 1;
  padding: 0 15rpx;
  overflow-y: auto;
}

.log-content {
  padding: 10rpx 0;
}

.log-item {
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f7f7f7;
  font-size: 13px;
}

